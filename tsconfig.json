/**
 * @file tsconfig.js
 * @description
 * TypeScript configuration file for the project.
 * This configuration specifies compiler options and file inclusion patterns.
 */
{
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
